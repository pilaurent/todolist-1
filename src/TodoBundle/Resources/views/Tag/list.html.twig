{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tags list</h1>
    <table class="table table-striped table-bordered">
    {% for tag in tags %}
        <tr>
            <td>
                <a href="{{ path('list_task_tag', {tag: tag.id}) }}">
                    <span class="glyphicon glyphicon-tag"></span> {{ tag.title }}
                </a>
                {{ tag.task|length }}
            </td>
        </tr>

    {% else %}
        <tr><td>{% trans %}tag.empty_list{% endtrans %}</td></tr>
    {% endfor %}
    </table>
{% endblock %}